generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  DIRETOR
  PROFESSOR
  ALUNO
  RESPONSAVEL
}

model User {
  id       String  @id @default(uuid())
  name     String
  password String
  role     Role?    @default(ALUNO)
  isActive Boolean
  createdAt DateTime?  @default(now())
  updatedAt DateTime? @updatedAt()

  @@map("users")
}

