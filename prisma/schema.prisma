generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  DIRETOR
  PROFESSOR
  ALUNO
  RESPONSAVEL
}

model User {
  id       String  @id @default(uuid())
  name     String
  email    String
  password String
  role     Role?   @default(ALUNO)
  isActive Boolean

  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt()

  @@map("users")
}

model Class {
  id        String   @id @default(uuid())
  name      String
  year      Int
  teacherId String // Professor respons√°vel
  students  String[] // Lista de IDs dos alunos

  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt()

  @@map("classes")
}

model Grade {
  id        String @id @default(uuid())
  studentId String
  classId   String
  subject   String
  grade     Int // Nota do aluno

  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt()

  @@map("grades")
}

